<Window x:Class="Task7SQLite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Task7SQLite"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Height="505"
        Width="1800"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="Transparent"
        AllowsTransparency="True"
        FontFamily="Consolas">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>

        <Image Grid.RowSpan="3"
           Stretch="UniformToFill" 
           Source="/main_bg.webp"
           />

        <Label FontSize="18"
           HorizontalAlignment="Center"
           VerticalAlignment="Center"
           Margin="5"
           Grid.Row="0"
           Content="Практическая работа № 7 | Использование EntityFrameworkCore и SQLite"
           Foreground="Gold"
           FontWeight="Bold"/>

        <Button Content="{materialDesign:PackIcon Kind=CloseCircle}" 
            Margin="0 2 5 0"
            Foreground="Gold" 
            VerticalAlignment="Top"
            HorizontalAlignment="Right"
            x:Name="BtnClose" 
            Click="BtnClose_Click" 
            Style="{StaticResource MaterialDesignIconButton}"/>

        <DataGrid x:Name="ProductDG"
              Grid.Row="1"
              Margin="5"
              AutoGenerateColumns="False"
              IsReadOnly="True"
              CanUserSortColumns="False"
              Background="#FFF"
              RowBackground="#FFF"
              AlternatingRowBackground="#FFEEEE"
              GridLinesVisibility="Horizontal"
              ColumnHeaderHeight="50"
              CanUserAddRows="False"
              CanUserDeleteRows="False"
              CanUserResizeRows="False"
              SelectionUnit="FullRow"
              SelectionMode="Single"
              Effect="{StaticResource MaterialDesignElevationShadow16}">
            <DataGrid.Resources>
                <SolidColorBrush x:Key="{x:Static SystemColors.HighlightBrushKey}" Color="LightYellow"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.InactiveSelectionHighlightBrushKey}" Color="LightYellow"/>
                <SolidColorBrush x:Key="{x:Static SystemColors.ControlBrushKey}" Color="White"/>
            </DataGrid.Resources>
            <DataGrid.Columns>
                <DataGridTextColumn Width="Auto"
                                Header="№"
                                Binding="{Binding ProductID}"
                                Foreground="Gold"/>
                <DataGridTextColumn Width="Auto"
                                Header="Название товара"
                                Binding="{Binding ProductName}"
                                Foreground="Gold"/>
                <DataGridTextColumn Width="Auto"
                                Header="Описание товара"
                                Binding="{Binding ProductDescription}"
                                Foreground="Gold"/>
                <DataGridTextColumn Width="Auto"
                                Header="Цена товара"
                                Binding="{Binding ProductPrice}"
                                Foreground="Gold"/>
                <DataGridTextColumn Width="Auto"
                                Header="Кол-во товара"
                                Binding="{Binding ProductUnit}"
                                Foreground="Gold"/>

                <DataGridTemplateColumn Header="Редактировать товар">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="BtnSelectProductToEdit"
                                Foreground="Gold"
                                Style="{StaticResource MaterialDesignFlatButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="EventEdit" 
                                                         Margin="0 2 3 0"/>
                                    <TextBlock Text="Редактировать"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>

                <DataGridTemplateColumn Header="Удалить товар">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Click="BtnDeleteProduct"
                                Foreground="Gold"
                                Style="{StaticResource MaterialDesignFlatButton}">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Remove" 
                                                         Margin="0 0 3 0"/>
                                    <TextBlock Text="Удалить"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <Grid Grid.Row="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0"
                Margin="5"
                BorderThickness="1"
                BorderBrush="Gold"
                Background="#20FF1493">
                <StackPanel Margin="5">
                    <Label Content="Добавить новый товар"
                       FontWeight="Bold"
                       Foreground="Gold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center" Margin="5"/>

                    <Grid Name="NewProductGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0"
                           Grid.Column="0"
                           Content="Название товара"
                           Foreground="Gold"/>
                        <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Text="{Binding ProductName}"
                             Foreground="Black"
                             Background="#FFF"
                             TextWrapping="Wrap"/>

                        <Label Grid.Row="1"
                           Grid.Column="0"
                           Content="Описание товара"
                           Foreground="Gold"/>
                        <TextBox Grid.Row="1"
                             Grid.Column="1"
                             Text="{Binding ProductDescription}"
                             Foreground="Black"
                             Background="#FFF"
                             TextWrapping="Wrap"/>

                        <Label Grid.Row="2"
                           Grid.Column="0"
                           Content="Цена товара"
                           Foreground="Gold"/>
                        <TextBox Grid.Row="2"
                             Grid.Column="1"
                             Text="{Binding ProductPrice}"
                             Foreground="Black"
                             Background="#FFF"/>

                        <Label Grid.Row="3"
                           Grid.Column="0"
                           Content="Кол-во товара"
                           Foreground="Gold"/>
                        <TextBox Grid.Row="3"
                             Grid.Column="1"
                             Text="{Binding ProductUnit}"
                             Foreground="Black"
                             Background="#FFF"/>

                        <Button Grid.Row="4"
                            Grid.ColumnSpan="2"
                            Width="150"
                            Margin="5"
                            Click="BtnAddItem"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Background="Gold"
                            BorderBrush="Gold"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonProgressAssist.Value="-1"
                            materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                            materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                            IsEnabled="{Binding DataContext.ControlsEnabled, 
                                      RelativeSource={RelativeSource FindAncestor, 
                                      AncestorType=Window}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Add" Margin="0 2 3 0"/>
                                <TextBlock Text="Добавить"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>

            <Border Grid.Column="1"
                Margin="5"
                BorderThickness="1"
                BorderBrush="Gold"
                Background="#20FF1493">
                <StackPanel Margin="5">
                    <Label Content="Редактировать товар"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Margin="5"
                       Foreground="Gold"/>

                    <Grid Name="UpdateProductGrid">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0"
                           Grid.Column="0"
                           Content="Название товара"
                           Foreground="Gold"/>
                        <TextBox Grid.Row="0"
                             Grid.Column="1"
                             Text="{Binding ProductName}"
                             Foreground="Black"
                             Background="#FFF"
                             TextWrapping="Wrap"/>

                        <Label Grid.Row="1"
                           Grid.Column="0"
                           Content="Описание товара"
                           Foreground="Gold"/>
                        <TextBox Grid.Row="1"
                             Grid.Column="1"
                             Text="{Binding ProductDescription}"
                             Foreground="Black"
                             Background="#FFF"
                             TextWrapping="Wrap"/>

                        <Label Grid.Row="2"
                           Grid.Column="0"
                           Content="Цена товара"
                           Foreground="Gold"/>
                        <TextBox Grid.Row="2"
                             Grid.Column="1"
                             Text="{Binding ProductPrice}"
                             Foreground="Black"
                             Background="#FFF"/>

                        <Label Grid.Row="3"
                           Grid.Column="0"
                           Content="Кол-во товара"
                           Foreground="Gold"/>
                        <TextBox Grid.Row="3"
                             Grid.Column="1"
                             Text="{Binding ProductUnit}"
                             Foreground="Black"
                             Background="#FFF"/>

                        <Button Grid.Row="4"
                            Grid.ColumnSpan="2"
                            Width="150"
                            Click="BtnEditItem"
                            Margin="5"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Foreground="White"
                            Background="Gold"
                            BorderBrush="Gold"
                            Style="{StaticResource MaterialDesignRaisedButton}"
                            materialDesign:ButtonProgressAssist.Value="-1"
                            materialDesign:ButtonProgressAssist.IsIndicatorVisible="True"
                            materialDesign:ButtonProgressAssist.IsIndeterminate="True"
                            IsEnabled="{Binding DataContext.ControlsEnabled, 
                                      RelativeSource={RelativeSource FindAncestor, 
                                      AncestorType=Window}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Edit" Margin="0 2 3 0"/>
                                <TextBlock Text="Редактировать"/>
                            </StackPanel>
                        </Button>
                    </Grid>
                </StackPanel>
            </Border>
        </Grid>
    </Grid>
</Window>
